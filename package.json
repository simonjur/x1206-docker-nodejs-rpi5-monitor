{
    "name": "x1200-ups-monitor",
    "version": "1.0.0",
    "description": "UPS battery monitor for Suptronics X1206 on Raspberry Pi (Node.js port)",
    "type": "module",
    "scripts": {
        "start": "node x1200-ups-monitor.js",
        "exporter": "node bin/exporter.ts",
        "status": "node bin/status.ts",
        "format:fix": "prettier --write --experimental-cli .",
        "format:check": "prettier --check --experimental-cli .",
        "lint": "eslint .",
        "tsc": "tsc --noEmit --pretty",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest"
    },
    "author": "",
    "license": "MIT",
    "engines": {
        "node": ">=24"
    },
    "dependencies": {
        "commander": "14.0.2",
        "console-table-printer": "2.15.0",
        "express": "5.2.1",
        "i2c-bus": "5.2.3",
        "node-libgpiod": "0.5.3",
        "prom-client": "15.1.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@eslint/json": "^0.14.0",
        "@types/node": "^25.0.0",
        "@vitest/coverage-v8": "^4.0.15",
        "eslint": "^9.39.1",
        "globals": "^16.5.0",
        "jiti": "^2.6.1",
        "prettier": "3.7.4",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.49.0",
        "vitest": "^4.0.15"
    }
}
